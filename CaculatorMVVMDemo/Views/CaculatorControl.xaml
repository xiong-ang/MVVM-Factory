<UserControl x:Class="Views.CaculatorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox TextWrapping="Wrap" Margin="0,0,0,356.6" Text="{Binding Input1}"/>
        <TextBox TextWrapping="Wrap" Margin="0,93,0,263.6" Text="{Binding Input2}"/>
        <TextBox TextWrapping="Wrap" Margin="0,186,0,170.6" Text="{Binding Result}"/>
        
        <Button Content="Add" HorizontalAlignment="Left" Margin="0,279,0,-0.4" VerticalAlignment="Top" Width="800" Height="171" Command="{Binding AddCommand}"/>

    </Grid>
</UserControl>
